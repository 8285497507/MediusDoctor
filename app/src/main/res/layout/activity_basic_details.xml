<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".activity.Basic_Details_Activity">
    <include layout="@layout/toolbar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar"
        android:layout_marginBottom="@dimen/_50sdp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/imgProfile"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_width="@dimen/_160sdp"
                android:layout_height="@dimen/_120sdp"
                android:scaleType="fitXY"
                android:visibility="gone"
                android:layout_gravity="center"
                />


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/text_view1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_9sdp"
                android:layout_marginTop="@dimen/_6sdp"
                android:fontFamily="@font/seogei"
                android:text="First Name *"
                android:textColor="@color/black"
                android:textSize="@dimen/_12sdp" />


            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_9sdp"
                android:layout_marginTop="@dimen/_4sdp"
                android:layout_marginRight="@dimen/_9sdp"
                android:background="@drawable/text_field"
                android:fontFamily="@font/seogei"
                android:gravity="center_vertical"
                android:inputType="textCapSentences"
                android:minHeight="@dimen/_30sdp"
                android:paddingLeft="@dimen/_15sdp"

                android:textColor="@color/black" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/text_lasrname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_9sdp"
                android:layout_marginTop="@dimen/_6sdp"
                android:fontFamily="@font/seogei"
                android:text="Last Name *"
                android:textColor="@color/black"
                android:textSize="@dimen/_12sdp" />


            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/lastname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_9sdp"
                android:layout_marginTop="@dimen/_4sdp"
                android:layout_marginRight="@dimen/_9sdp"
                android:background="@drawable/text_field"
                android:fontFamily="@font/seogei"
                android:gravity="center_vertical"
                android:inputType="textCapSentences"
                android:minHeight="@dimen/_30sdp"
                android:paddingLeft="@dimen/_15sdp"

                android:textColor="@color/black" />


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/text_view2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_9sdp"
                android:layout_marginTop="@dimen/_8sdp"
                android:fontFamily="@font/seogei"
                android:text="Gender *"
                android:textColor="@color/black"
                android:textSize="@dimen/_12sdp" />


            <RadioGroup
                android:id="@+id/radiogroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_marginLeft="@dimen/_9sdp"
                android:layout_marginTop="@dimen/_2sdp"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/male"
                    android:layout_width="@dimen/_70sdp"
                    android:layout_height="wrap_content"
                    android:buttonTint="@color/blue"
                    android:fontFamily="@font/seogei"
                    android:text="Male"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_12sdp" />

                <RadioButton
                    android:id="@+id/female"
                    android:layout_width="@dimen/_80sdp"
                    android:layout_height="wrap_content"
                    android:buttonTint="@color/blue"
                    android:fontFamily="@font/seogei"
                    android:text="Female"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_12sdp" />

                <RadioButton
                    android:id="@+id/others"
                    android:layout_width="@dimen/_70sdp"
                    android:layout_height="wrap_content"
                    android:buttonTint="@color/blue"
                    android:fontFamily="@font/seogei"
                    android:text="Others"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_12sdp">


                </RadioButton>
            </RadioGroup>




            <androidx.appcompat.widget.AppCompatSpinner
                android:id="@+id/gender"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_33ssp"
                android:layout_marginLeft="@dimen/_9sdp"
                android:layout_marginTop="@dimen/_4sdp"
                android:layout_marginRight="@dimen/_9sdp"
                android:background="@drawable/text_field"
                android:fontFamily="@font/seogei"
                android:gravity="center_vertical"
                android:inputType="text"
                android:paddingLeft="@dimen/_15sdp"
                android:paddingRight="@dimen/_10sdp"/>


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/text_view3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_9sdp"
                android:layout_marginTop="@dimen/_8sdp"
                android:fontFamily="@font/seogei"
                android:text="Date Of Birth *"
                android:textColor="@color/black"
                android:textSize="@dimen/_12sdp" />


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/dob"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_9sdp"
                android:layout_marginTop="@dimen/_4sdp"
                android:layout_marginRight="@dimen/_9sdp"
                android:background="@drawable/text_field"
                android:fontFamily="@font/seogei"
                android:gravity="center_vertical"
                android:inputType="date"
                android:minHeight="@dimen/_30sdp"
                android:paddingLeft="@dimen/_15sdp"
                android:textColor="@color/black" />


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/text_view4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_9sdp"
                android:layout_marginTop="@dimen/_8sdp"
                android:fontFamily="@font/seogei"
                android:text="Phone No. *"
                android:textColor="@color/black"
                android:textSize="@dimen/_12sdp" />


            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/p_num"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_9sdp"
                android:layout_marginTop="@dimen/_4sdp"
                android:layout_marginRight="@dimen/_9sdp"
                android:background="@drawable/text_field"
                android:gravity="center_vertical"
                android:inputType="number"
                android:minHeight="@dimen/_30sdp"
                android:paddingLeft="@dimen/_15sdp"
                android:maxLength="10"
                android:textColor="@color/black" />


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/text_view5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_9sdp"
                android:layout_marginTop="@dimen/_8sdp"
                android:fontFamily="@font/seogei"
                android:text="Whatsapp No. *"
                android:textColor="@color/black"
                android:textSize="@dimen/_12sdp" />


            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/ws_num"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_9sdp"
                android:layout_marginTop="@dimen/_4sdp"
                android:layout_marginRight="@dimen/_9sdp"
                android:background="@drawable/text_field"
                android:fontFamily="@font/seogei"
                android:gravity="center_vertical"
                android:inputType="number"
                android:minHeight="@dimen/_30sdp"
                android:paddingLeft="@dimen/_15sdp"
                android:maxLength="10"
                android:textColor="@color/black" />


            <androidx.appcompat.widget.AppCompatTextView

                android:id="@+id/text_view6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_9sdp"
                android:layout_marginTop="@dimen/_8sdp"
                android:fontFamily="@font/seogei"
                android:text="Email ID *"
                android:textColor="@color/black"
                android:textSize="@dimen/_12sdp" />


            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/mail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_9sdp"
                android:layout_marginTop="@dimen/_4sdp"
                android:layout_marginRight="@dimen/_9sdp"
                android:background="@drawable/text_field"
                android:fontFamily="@font/seogei"
                android:gravity="center_vertical"
                android:inputType="textEmailAddress"
                android:minHeight="@dimen/_30sdp"
                android:paddingLeft="@dimen/_15sdp"
                android:textColor="@color/black" />

            <androidx.appcompat.widget.AppCompatTextView
android:visibility="gone"
                android:id="@+id/text_view9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_9sdp"
                android:layout_marginTop="@dimen/_8sdp"
                android:fontFamily="@font/seogei"
                android:text="OverAll Exprience"
                android:textColor="@color/black"
                android:textSize="@dimen/_12sdp" />


            <androidx.appcompat.widget.AppCompatTextView
                android:visibility="visible"
                android:id="@+id/exprience"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_9sdp"
                android:layout_marginTop="@dimen/_4sdp"
                android:layout_marginRight="@dimen/_9sdp"
                android:background="@drawable/text_field"
                android:fontFamily="@font/seogei"
                android:gravity="center_vertical"
                android:inputType="textEmailAddress"
                android:minHeight="@dimen/_30sdp"
                android:paddingLeft="@dimen/_15sdp"
                android:textColor="@color/black" />


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/text_view7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_9sdp"
                android:layout_marginTop="@dimen/_8sdp"
                android:fontFamily="@font/seogei"
                android:text="Specialization *"
                android:textColor="@color/black"
                android:textSize="@dimen/_12sdp" />


            <RelativeLayout
                android:id="@+id/hospitall"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30sdp"
                android:layout_below="@+id/toolbar"
                android:layout_marginStart="@dimen/_7sdp"
                android:layout_marginTop="@dimen/_7sdp"
                android:layout_marginEnd="@dimen/_7sdp"
                android:layout_marginBottom="@dimen/_7sdp"
                android:background="@drawable/text_field"
                android:minHeight="@dimen/_25sdp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imgdropdown"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:background="@drawable/drop_down"/>

                <androidx.appcompat.widget.AppCompatSpinner
                    android:id="@+id/spec"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_toLeftOf="@+id/imgdropdown"
                    android:fontFamily="@font/seogei"
                    android:inputType="text" />

            </RelativeLayout>





            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/text_view8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_9sdp"
                android:layout_marginTop="@dimen/_8sdp"
                android:fontFamily="@font/seogei"
                android:text="Location "
                android:textColor="@color/black"
                android:textSize="@dimen/_12sdp"
                android:visibility="gone" />


            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/loc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_9sdp"
                android:layout_marginTop="@dimen/_4sdp"
                android:layout_marginRight="@dimen/_9sdp"
                android:background="@drawable/text_field"
                android:fontFamily="@font/seogei"
                android:inputType="text"
                android:minHeight="@dimen/_30sdp"
                android:paddingLeft="@dimen/_15sdp"
                android:textColor="@color/black"
                android:visibility="gone" />


            <androidx.appcompat.widget.AppCompatTextView
                android:visibility="gone"
                android:id="@+id/txt_view9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_9sdp"
                android:layout_marginTop="@dimen/_8sdp"
                android:fontFamily="@font/seogei"
                android:text="Use my current location "
                android:textColor="#2196F3"
                android:textSize="@dimen/_12sdp" />


            <LinearLayout
                android:id="@+id/addlayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_5ssp"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@drawable/phone_number_linear_layout"
                android:elevation="@dimen/_2sdp"
                android:orientation="horizontal"
                android:paddingTop="@dimen/_7sdp"
                android:paddingBottom="@dimen/_7sdp">

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/seogei"
                    android:gravity="center"
                    android:paddingLeft="@dimen/_15sdp"
                    android:text="Qualificaton *"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_15ssp" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/q_add"
                    android:layout_width="@dimen/_45sdp"
                    android:layout_height="@dimen/_22sdp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/_85sdp"
                    android:background="@drawable/button"
                    android:fontFamily="@font/seogei"
                    android:gravity="center"
                    android:text="Add"
                    android:textAllCaps="false"
                    android:textSize="@dimen/_7sdp" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/q_remove"
                    android:layout_width="@dimen/_45sdp"
                    android:layout_height="@dimen/_22sdp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/_7sdp"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:background="@drawable/button"
                    android:fontFamily="@font/seogei"
                    android:gravity="center"
                    android:text="Remove"
                    android:textAllCaps="false"
                    android:textSize="@dimen/_7sdp" />


            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/addlayout"
                android:layout_margin="@dimen/_5sdp" />
        </LinearLayout>

    </ScrollView>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:minHeight="@dimen/_50sdp">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/_8sdp"
            android:layout_marginTop="@dimen/_8sdp"
            android:layout_marginEnd="@dimen/_8sdp"
            android:layout_marginBottom="@dimen/_8sdp"
            android:background="@drawable/button"
            android:fontFamily="@font/seogei"
            android:minWidth="@dimen/_150sdp"
            android:paddingLeft="@dimen/_5sdp"
            android:paddingRight="@dimen/_15sdp"
            android:text="Next"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/_15sdp"
            android:textStyle="bold" />

    </androidx.appcompat.widget.LinearLayoutCompat>

<!--    <include-->
<!--        layout="@layout/framlayout"-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="match_parent"-->
<!--        android:layout_below="@+id/toolbar" />-->

</RelativeLayout>