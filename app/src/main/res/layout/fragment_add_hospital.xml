<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="@dimen/_10sdp"
    tools:context=".fragments.AddHospitalFragment">

    <include layout="@layout/toolbar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">


            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/H_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_5sdp"
                android:background="@drawable/text_field"
                android:hint="Name"
                android:fontFamily="@font/seogei"
                android:minHeight="@dimen/_30sdp"
                android:padding="@dimen/_5sdp"

                android:textColorHint="@color/white11" />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/H_Type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_5sdp"
                android:background="@drawable/text_field"
                android:hint="Type"
                android:fontFamily="@font/seogei"
                android:minHeight="@dimen/_30sdp"
                android:padding="@dimen/_5sdp"

                android:textColorHint="@color/white11" />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/H_Mobilenumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_5sdp"
                android:background="@drawable/text_field"
                android:hint="Mobile Number"
                android:minHeight="@dimen/_30sdp"
                android:padding="@dimen/_5sdp"
                android:fontFamily="@font/seogei"
                android:textColorHint="@color/white11" />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/H_Adderss"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_5sdp"
                android:background="@drawable/text_field"
                android:hint="Address"
                android:minHeight="@dimen/_30sdp"
                android:padding="@dimen/_5sdp"
                android:fontFamily="@font/seogei"
                android:textColorHint="@color/white11" />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/H_Landmark"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_5sdp"
                android:background="@drawable/text_field"
                android:hint="Land Mark"
                android:minHeight="@dimen/_30sdp"
                android:padding="@dimen/_5sdp"
                android:fontFamily="@font/seogei"
                android:textColorHint="@color/white11" />

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_5sdp"
                android:background="@drawable/text_field"
                android:fontFamily="@font/seogei"
                android:gravity="center"
                android:minHeight="@dimen/_30sdp"
                android:orientation="vertical">

                <androidx.appcompat.widget.AppCompatSpinner
                    android:id="@+id/spinnerCuntry"
                    android:layout_width="match_parent"
                    android:fontFamily="@font/seogei"
                    android:layout_height="match_parent"
                    android:entries="@array/Hospitialname"
                    android:padding="@dimen/_5sdp" />

            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_5sdp"
                android:background="@drawable/text_field"

                android:gravity="center"
                android:minHeight="@dimen/_30sdp"
                android:orientation="vertical">

                <androidx.appcompat.widget.AppCompatSpinner
                    android:id="@+id/spinnerState"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:entries="@array/Hospitialname"
                    android:padding="@dimen/_5sdp"
                    android:fontFamily="@font/seogei"
                    android:pointerIcon="arrow" />

            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_5sdp"
                android:background="@drawable/text_field"

                android:gravity="center"
                android:minHeight="@dimen/_30sdp"
                android:orientation="vertical">

                <androidx.appcompat.widget.AppCompatSpinner
                    android:id="@+id/spinnerCity"
                    android:layout_width="match_parent"
                    android:fontFamily="@font/seogei"
                    android:layout_height="match_parent"
                    android:entries="@array/Hospitialname"
                    android:padding="@dimen/_5sdp" />

            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_5sdp"
                android:background="@drawable/text_field"

                android:gravity="center"
                android:minHeight="@dimen/_30sdp"
                android:orientation="vertical">

                <androidx.appcompat.widget.AppCompatSpinner
                    android:id="@+id/spinnerlocality"
                    android:layout_width="match_parent"
                    android:fontFamily="@font/seogei"
                    android:layout_height="match_parent"
                    android:entries="@array/Hospitialname"
                    android:padding="@dimen/_5sdp" />

            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/H_Pin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_5sdp"
                android:background="@drawable/text_field"
                android:hint="Pin"
                android:minHeight="@dimen/_30sdp"
                android:padding="@dimen/_5sdp"
                android:fontFamily="@font/seogei"
                android:textColorHint="@color/gray" />


        </LinearLayout>

    </ScrollView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_margin="@dimen/_10sdp"
        android:minHeight="@dimen/_30sdp"
        android:orientation="vertical">
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/button"
            android:minWidth="@dimen/_150sdp"
            android:padding="@dimen/_5sdp"
            android:text="Save"
            android:fontFamily="@font/seogei"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/_15sdp"
            android:textStyle="bold" />
    </LinearLayout>


</RelativeLayout>