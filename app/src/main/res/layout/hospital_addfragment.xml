<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/mRelativeAdddearch"
    android:background="@color/white">

    <include
        android:id="@+id/toolbar2"
        layout="@layout/toolbar2" />


    <View
        android:id="@+id/view1"
        android:layout_below="@+id/toolbar2"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"

        android:background="#757575"
        />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/edttexthospital"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:layout_below="@id/view1"
        android:layout_marginLeft="@dimen/_15sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_15sdp"
        android:background="@drawable/edit_box_drawable"
        android:drawableRight="@drawable/ic_charm_search"
        android:hint="Enter Mobile Number to search Clinic"
        android:inputType="number"
        android:paddingLeft="@dimen/_5sdp"
        android:paddingRight="@dimen/_10sdp"
        android:textColor="@color/black"
        android:textColorHint="#757575" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rcv_searhhospital"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edttexthospital"
        android:layout_marginTop="@dimen/_10sdp" />

    <ProgressBar
        android:id="@+id/mProgreeBar"
        android:visibility="gone"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>



</RelativeLayout>