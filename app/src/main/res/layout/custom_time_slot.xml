<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
   >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/_5sdp"
        android:background="@drawable/rect_shadow"
        android:layout_margin="@dimen/_8sdp">


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:gravity="center"
        >
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="@dimen/_20sdp"
    android:layout_weight="1"
    android:background="@drawable/rect_shadow"
    >
    <TextView
        android:id="@+id/spin_ft"
        android:layout_width="match_parent"
        android:gravity="center"
        android:textSize="@dimen/_13ssp"
        android:textColor="@color/menublack"
        android:hint="hh:mm"
        android:layout_height="match_parent"/>
</LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_9ssp"
            android:text="To"
            android:layout_margin="@dimen/_5sdp"
            android:textColor="@color/menublack"
            />
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="@dimen/_20sdp"
    android:layout_weight="1"
    android:background="@drawable/rect_shadow"
    >

    <TextView
        android:id="@+id/spin_tt"
        android:layout_width="match_parent"
        android:gravity="center"
        android:textSize="@dimen/_13ssp"
        android:textColor="@color/menublack"
        android:hint="hh:mm"
        android:layout_height="match_parent"/>
</LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_9ssp"
            android:text="Caps"
            android:layout_margin="@dimen/_5sdp"
            android:textColor="@color/menublack"
            />
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="@dimen/_20sdp"
    android:layout_weight="1"
    android:background="@drawable/rect_shadow"
    >

    <Spinner
        android:id="@+id/spin_cap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</LinearLayout>
        <ImageView
            android:id="@+id/img_delete"
            android:layout_width="@dimen/_23sdp"
            android:layout_height="@dimen/_23sdp"
            android:src="@drawable/ic_delete"
            android:layout_margin="@dimen/_4sdp"
            app:tint="@color/grey_dark" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/tv_mon"
            android:text="M"
            style="@style/daystyle"
            android:layout_weight="1"
            />

        <TextView
            android:id="@+id/tv_tue"
            android:text="T"
            style="@style/daystyle"
            android:layout_weight="1"
            />

        <TextView
            android:id="@+id/tv_wed"
            android:text="W"
            style="@style/daystyle"
            android:layout_weight="1"
            />

        <TextView
            android:id="@+id/tv_thur"
            android:text="T"
            style="@style/daystyle"
            android:layout_weight="1"
            />

        <TextView
            android:id="@+id/tv_fri"
            android:text="F"
            style="@style/daystyle"
            android:layout_weight="1"
            />

        <TextView
            android:id="@+id/tv_sat"
            android:text="S"
            style="@style/daystyle"
            android:layout_weight="1"
            />

        <TextView
            android:id="@+id/tv_sun"
            android:text="S"
            style="@style/daystyle"
            android:layout_weight="1"
            />

    </LinearLayout>
    </LinearLayout>
</LinearLayout>