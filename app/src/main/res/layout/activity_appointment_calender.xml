<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".appointment_calender"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_45sdp"
        android:orientation="horizontal"
        android:background="@drawable/appointment_calender"
        >

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/profile" />
        <TextView
            android:id="@+id/tv_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:fontFamily="@font/seogei"
            android:textColor="@color/white"
            android:text="Hello Doctor"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_45sdp"
        android:orientation="horizontal"
        android:background="@color/blue"
        android:gravity="center"
        android:padding="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_5sdp"
        >

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="42dp"
            android:layout_height="29dp"
            android:src="@drawable/img"


            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:fontFamily="@font/seogei"
            android:text="Appointment Calender"
            android:textColor="@color/white"
            android:paddingLeft="@dimen/_74sdp"
            android:paddingTop="@dimen/_9sdp"
            />

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="@dimen/_34sdp"
            android:layout_height="wrap_content"
            android:src="@drawable/output_2" />



    </LinearLayout>

    <androidx.appcompat.widget.AppCompatSpinner
        android:layout_width="match_parent"
        android:layout_height="@dimen/_45sdp"
        android:fontFamily="@font/seogei"
        android:text="Select Hospital"/>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="78dp" />
<View
    android:layout_width="match_parent"
    android:layout_height=".1dp"
    android:background="#D6D5D5"
    />

  <androidx.recyclerview.widget.RecyclerView
      android:id="@+id/recyclerview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
      android:layout_marginTop="@dimen/_4sdp"
      android:layout_weight="1"

      />

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="@dimen/_40sdp"
    android:orientation="horizontal"
    android:gravity="center"
    android:weightSum="4"
    android:background="@color/blue"
    >
<androidx.appcompat.widget.AppCompatImageView
    android:layout_width="0dp"
    android:layout_height="@dimen/_34sdp"
    android:layout_weight="1"
    android:src="@drawable/home"

    />

<androidx.appcompat.widget.AppCompatImageView
    android:layout_width="0dp"
    android:layout_height="@dimen/_34sdp"
    android:layout_weight="1"
    android:src="@drawable/chart"
    />

<androidx.appcompat.widget.AppCompatImageView
    android:layout_width="0dp"
    android:layout_height="@dimen/_34sdp"
    android:layout_weight="1"
    android:src="@drawable/third"/>

<androidx.appcompat.widget.AppCompatImageView
    android:layout_width="0dp"
    android:layout_height="@dimen/_34sdp"
    android:layout_weight="1"
    android:src="@drawable/newprofile"

    />

</LinearLayout>


</LinearLayout>