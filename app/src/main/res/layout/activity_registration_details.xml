<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    tools:context=".activity.Registration_Details_Activity">

    <include layout="@layout/toolbar" />

    <View
        android:id="@+id/view1"
        android:layout_below="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#757575"/>

    <LinearLayout
        android:id="@+id/mainlayout"
        android:layout_below="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_15sdp"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ll_indicator"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/view1"
            android:layout_margin="@dimen/_6sdp"
            >
            <View
                android:layout_width="0dp"
                android:layout_height="@dimen/_3sdp"
                android:layout_weight="1"
                android:layout_margin="@dimen/_4sdp"
                android:background="@drawable/line_fill"/>
            <View
                android:layout_width="0dp"
                android:layout_height="@dimen/_3sdp"
                android:layout_weight="1"
                android:layout_margin="@dimen/_4sdp"
                android:background="@drawable/line_fill"/>
            <View
                android:layout_width="0dp"
                android:layout_height="@dimen/_3sdp"
                android:layout_weight="1"
                android:layout_margin="@dimen/_4sdp"
                android:background="@drawable/line_fill"/>
            <View
                android:layout_width="0dp"
                android:layout_height="@dimen/_3sdp"
                android:layout_weight="1"
                android:layout_margin="@dimen/_4sdp"
                android:background="@drawable/line_shodow"/>


        </LinearLayout>


<!--        <androidx.appcompat.widget.AppCompatTextView-->
<!--            android:id="@+id/txt1"-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:layout_marginLeft="@dimen/_8sdp"-->
<!--            android:text="Registration Number"-->
<!--            android:fontFamily="@font/seogei"-->
<!--            android:textColor="@color/black"-->
<!--            android:textSize="@dimen/_14sdp" />-->


        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_4sdp"
            android:focusable="true"
            android:hint="Registration No."
            android:textColor="@color/menublack"
            android:textColorHint="@color/menublack"
            app:boxBackgroundColor="@color/white">

        <EditText
            android:id="@+id/r_num"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_3sdp"
            android:fontFamily="@font/seogei"
            android:inputType="number"
            android:textColor="@color/menublack"
            android:backgroundTint="@color/grey_dark"
            android:paddingLeft="@dimen/_10sdp"
            android:minHeight="@dimen/_30sdp"
           />
        </com.google.android.material.textfield.TextInputLayout>

<!--        <View-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="0.5dp"-->
<!--            android:background="#717171"-->
<!--           />-->

<!--        <androidx.appcompat.widget.AppCompatTextView-->
<!--            android:id="@+id/txt2"-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:layout_marginLeft="@dimen/_8sdp"-->
<!--            android:layout_marginTop="@dimen/_5sdp"-->
<!--            android:text="Registration Council"-->
<!--            android:fontFamily="@font/seogei"-->
<!--            android:textColor="@color/black"-->
<!--            android:textSize="@dimen/_14sdp" />-->

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_4sdp"
            android:focusable="true"
            android:hint="Registration council"
            android:textColor="@color/menublack"
            android:textColorHint="@color/menublack"
            app:boxBackgroundColor="@color/white">
        <EditText
            android:id="@+id/r_council"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_3sdp"
            android:inputType="text"
            android:paddingLeft="@dimen/_10sdp"
            android:imeOptions="actionDone"
            android:fontFamily="@font/seogei"
            android:minHeight="@dimen/_30sdp"
            android:textColor="@color/menublack"
            android:backgroundTint="@color/grey_dark" />
        </com.google.android.material.textfield.TextInputLayout>



<!--        <androidx.appcompat.widget.AppCompatTextView-->
<!--            android:id="@+id/txt3"-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:layout_marginLeft="@dimen/_8sdp"-->
<!--            android:layout_marginTop="@dimen/_5sdp"-->
<!--            android:text="Registration Date"-->
<!--            android:fontFamily="@font/seogei"-->
<!--            android:textColor="@color/black"-->
<!--            android:textSize="@dimen/_14sdp" />-->

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_4sdp"
            android:focusable="true"
            android:hint="Registration Date"
            android:textColor="@color/menublack"
            android:textColorHint="@color/menublack"
            app:boxBackgroundColor="@color/white">
        <EditText
            android:id="@+id/r_date"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_3sdp"
            android:inputType="date"
            android:minHeight="@dimen/_30sdp"

            android:cursorVisible="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:fontFamily="@font/seogei"
            android:paddingLeft="@dimen/_10sdp"
            android:textColor="@color/menublack"
            android:backgroundTint="@color/grey_dark" />

        </com.google.android.material.textfield.TextInputLayout>



    </LinearLayout>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/mainlayout"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="18dp"
        android:layout_marginBottom="2dp"
        android:gravity="center|bottom">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center"
            android:layout_margin="@dimen/_8sdp"
            android:background="@drawable/verify_button"
            android:fontFamily="@font/seogei"
            android:gravity="center"
            android:minWidth="@dimen/_150sdp"
            android:paddingLeft="@dimen/_5sdp"
            android:paddingRight="@dimen/_5sdp"
            android:text="Next"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/_15sdp"
            android:textStyle="bold" />

    </androidx.appcompat.widget.LinearLayoutCompat>
</RelativeLayout>
