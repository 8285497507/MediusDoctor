<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_5sdp"
    android:orientation="vertical"
    android:padding="@dimen/_8sdp"
    android:background="@drawable/edit_box_drawable"
    >
<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Select Degree"
    android:textSize="@dimen/_8ssp"
    android:textStyle="bold"
    android:textColor="@color/black"
    />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rect_shadow">

        <Spinner
            android:id="@+id/spin_degree"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>


    <EditText
        android:id="@+id/edt_orgnasation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="@color/menublack"
        android:backgroundTint="@color/grey_dark"
        android:singleLine="true"
        android:textSize="@dimen/_13ssp"
        android:hint="Organisation"
        />
</LinearLayout>