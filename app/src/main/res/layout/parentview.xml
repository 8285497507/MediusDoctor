<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:background="@color/float_transparent"
>
<LinearLayout
    android:layout_margin="@dimen/_7ssp"
    android:id="@+id/monday"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/divider_background_dark">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/monday_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_5ssp"
        android:layout_marginTop="@dimen/_5ssp"
        android:layout_marginEnd="@dimen/_5ssp"
        android:layout_marginBottom="@dimen/_5ssp"
        android:padding="@dimen/_5ssp" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/addsection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/monday_recycler_view"
        android:gravity="center"
        android:fontFamily="@font/seogei"
        android:minHeight="@dimen/_30sdp"
        android:text="Add new session"
        android:textColor="@color/Blue11"
        android:textStyle="bold" />

</LinearLayout>

    <TextView

        android:id="@+id/day"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_30sdp"
        android:layout_marginLeft="@dimen/_5ssp"
        android:background="@color/white"
        android:fontFamily="@font/seogei"
        android:gravity="top|center"
        android:inputType="text"
        android:paddingLeft="@dimen/_5sdp"
        android:paddingRight="@dimen/_5sdp"
        android:text="monday"
        android:textColor="@color/black"
        android:textSize="@dimen/_12sdp" />

</RelativeLayout>
