<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_100sdp"
        android:layout_marginLeft="@dimen/_15sdp"
        android:layout_marginTop="@dimen/_15sdp"
        android:layout_marginRight="@dimen/_15sdp"
        android:background="@drawable/edit_box_drawable">

        <ImageView
            android:id="@+id/imghospoital"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_50sdp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/_20sdp"
            android:src="@drawable/ic_hospitallist" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_toRightOf="@+id/imghospoital">


            <TextView
                android:id="@+id/hospitalname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/seogei"
                android:text="Medanta Hospital"
                android:textColor="#616060"
                android:textSize="@dimen/_12sdp" />

            <TextView
                android:id="@+id/hospitaladress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/hospitalname"
                android:layout_marginTop="@dimen/_5sdp"
                android:fontFamily="@font/seogei"
                android:text="P.O: Irba, P.S: Ormanjhi, NH33,Ranchi, Jharkhand 835217"
                android:textColor="#616060"
                android:textSize="@dimen/_10sdp" />

            <TextView
                android:id="@+id/invite"
                android:layout_width="@dimen/_60sdp"
                android:layout_height="@dimen/_20sdp"
                android:layout_below="@+id/hospitaladress"
                android:layout_alignParentRight="true"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:fontFamily="@font/robotoregular"
                android:minWidth="@dimen/_150sdp"
                android:paddingTop="@dimen/_2sdp"
                android:paddingBottom="@dimen/_2sdp"
                android:text="Invite"
                android:textAllCaps="false"
                android:textColor="@color/red"
                android:textSize="@dimen/_10sdp" />


            <RelativeLayout
                android:id="@+id/rel_acceptreject"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/hospitaladress"
                android:gravity="right"
                android:visibility="gone">


                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/Accept"
                    android:layout_width="@dimen/_60sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:background="@drawable/verify_button"
                    android:fontFamily="@font/robotoregular"
                    android:minWidth="@dimen/_150sdp"
                    android:paddingTop="@dimen/_2sdp"
                    android:paddingBottom="@dimen/_2sdp"
                    android:text="Accept"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_10sdp" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/reject"
                    android:layout_width="@dimen/_60sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:layout_toRightOf="@+id/Accept"
                    android:background="@drawable/verify_button"
                    android:fontFamily="@font/robotoregular"
                    android:minWidth="@dimen/_150sdp"
                    android:paddingTop="@dimen/_2sdp"
                    android:paddingBottom="@dimen/_2sdp"
                    android:text="Reject"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_10sdp" />

            </RelativeLayout>
        </RelativeLayout>

        <ProgressBar
            android:id="@+id/mProgreeBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:visibility="gone" />
    </RelativeLayout>


</RelativeLayout>