<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <include layout="@layout/toolbar" />
    <View
        android:id="@+id/view1"
        android:layout_below="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#757575"
        />


    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/edttextmsg"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_240sdp"
        android:layout_below="@+id/view1"
        android:layout_marginLeft="@dimen/_30sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_30sdp"
        android:background="@drawable/contact_drawable"
        android:fontFamily="@font/robotolight"
        android:gravity="start"
        android:hint="Your Message"
        android:padding="@dimen/_10sdp"
        android:textColor="@color/black"
        android:textColorHint="#939393" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edttextmsg"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/_80sdp"
        android:background="@drawable/verify_button"
        android:fontFamily="@font/seogei"
        android:minWidth="@dimen/_150sdp"
        android:paddingTop="@dimen/_2sdp"
        android:paddingBottom="@dimen/_2sdp"
        android:text="Submit"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="@dimen/_15sdp"
        android:textStyle="bold" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textor"
        android:layout_below="@+id/save"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/red"
        android:gravity="center"
        android:fontFamily="@font/robotoregular"
        android:textStyle="bold"
        android:layout_marginTop="@dimen/_10sdp"
        android:text="Or"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textor"
        android:layout_marginTop="@dimen/_20sdp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <ImageView
                android:id="@+id/imgviewcall"
                android:layout_width="@dimen/_10sdp"
                android:layout_height="@dimen/_10sdp"
                android:layout_centerVertical="true"
                android:background="@drawable/bxphonecall"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_toRightOf="@+id/imgviewcall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_5sdp"
                android:fontFamily="@font/robotoregular"
                android:textColor="@color/black"
                android:text="+91 00000 00000"/>


        </RelativeLayout>


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_gravity="center">

            <ImageView
                android:id="@+id/imgviewwhatsapp"
                android:layout_width="@dimen/_10sdp"
                android:layout_height="@dimen/_10sdp"
                android:layout_centerVertical="true"
                android:background="@drawable/whatsapp" />

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_toRightOf="@+id/imgviewwhatsapp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_5sdp"
                android:fontFamily="@font/robotoregular"
                android:textColor="@color/black"
                android:text="+91 00000 00000"/>


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_gravity="center">

            <ImageView
                android:id="@+id/imgvieinfo"
                android:layout_width="@dimen/_10sdp"
                android:layout_height="@dimen/_10sdp"
                android:layout_centerVertical="true"
                android:background="@drawable/mail" />

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_toRightOf="@+id/imgvieinfo"
                android:fontFamily="@font/robotoregular"
                android:text="info@medius.com"
                android:textColor="@color/black" />


        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>